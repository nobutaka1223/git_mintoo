<div class="contents row">
<h2>~Sign up（登録）~</h2>

<% text = "<h4>twitterアカウントでサインインしたい方も、最初にこちらで登録をお願い致します.\n
登録以降はtwitterアカウントでサインイン可能になります。</h4>" %>

<%= simple_format text %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.label :nickname %> <em> (6 characters maximum)</em><br />
    <%= f.text_field :nickname, autofocus: true, maxlength: "8" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  
  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, autocomplete: "off", :size=>"60x10" %>
  </div>
  
  
  <h4>プロフィール画像選択</h4>
  <div class="field">
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

</div>

<%= render "devise/shared/links" %>
